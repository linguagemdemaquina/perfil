import sys
from PyQt6.QtWidgets import QApplication, QWidget, QLabel, QLineEdit, QPushButton, QVBoxLayout, QSpacerItem, QSizePolicy
from PyQt6.QtGui import QPalette, QColor, QPixmap
from PyQt6.QtCore import Qt

class LoginApp(QWidget):
    def __init__(self):
        super().__init__()

        self.initUI()

    def initUI(self):
        self.setGeometry(100, 100, 320, 600)
        self.setWindowTitle('App Desktop Python - PyQt6')

        palette = QPalette()
        palette.setColor(QPalette.ColorRole.Window, QColor('#AEA684'))
        self.setPalette(palette)

        layout = QVBoxLayout()

        # Imagem da Logomaca
        self.label_imagem = QLabel(self)
        pixmap = QPixmap('logomarca/logomarca.png')
        self.label_imagem.setPixmap(pixmap.scaled(150, 150, Qt.AspectRatioMode.KeepAspectRatio, Qt.TransformationMode.SmoothTransformation))
        self.label_imagem.setAlignment(Qt.AlignmentFlag.AlignCenter)
        layout.addWidget(self.label_imagem)

        # Espaçador
        espacador_1 = QSpacerItem(20, 20, QSizePolicy.Policy.Minimum, QSizePolicy.Policy.Fixed)
        layout.addItem(espacador_1)
        
        # Label de Login
        self.label_nome_de_usuario = QLabel('Login:')
        self.label_nome_de_usuario.setFixedHeight(40)
        self.label_nome_de_usuario.setAlignment(Qt.AlignmentFlag.AlignCenter)
        self.label_nome_de_usuario.setStyleSheet("color: #454440; font-size: 16px; font-weight: bold;")    
        layout.addWidget(self.label_nome_de_usuario)

        # Campo de Login
        self.campo_nome_de_usuario = QLineEdit(self)
        self.campo_nome_de_usuario.setGeometry(100, 60, 20, 30)
        self.campo_nome_de_usuario.setStyleSheet("border-radius: 5px; color: #EBE9E0; background-color: #726e5f; font-size: 14px; font-weight: bold; padding: 5px 5px;")
        layout.addWidget(self.campo_nome_de_usuario)

        # Label de Senha
        self.label_senha = QLabel('Senha:')
        self.label_senha.setFixedHeight(40)
        self.label_senha.setAlignment(Qt.AlignmentFlag.AlignCenter)
        self.label_senha.setStyleSheet("color: #454440; font-size: 16px; font-weight: bold;")
        layout.addWidget(self.label_senha)

        # Campo de Senha
        self.campo_senha = QLineEdit(self)
        self.campo_senha.setGeometry(50, 120, 140, 20)
        self.campo_senha.setEchoMode(QLineEdit.EchoMode.Password)
        self.campo_senha.setStyleSheet("border-radius: 5px; color: #EBE9E0; background-color: #726e5f; font-size: 14px; font-weight: bold; padding: 5px 5px;")   
        layout.addWidget(self.campo_senha)

        # Espaçador
        espacador_2 = QSpacerItem(20, 50, QSizePolicy.Policy.Minimum, QSizePolicy.Policy.Fixed)
        layout.addItem(espacador_2)

        # Botão de Acesso
        self.botao_login = QPushButton('Acessar', self)
        self.botao_login.setGeometry(100, 160, 100, 30)
        self.botao_login.setStyleSheet("border-radius: 5px; color: #EBE9E0; background-color: #9a8f65; font-size: 16px; font-weight: bold; padding: 10px 20px;")
        self.botao_login.setCursor(Qt.CursorShape.PointingHandCursor)
        self.botao_login.clicked.connect(self.check_login)
        layout.addWidget(self.botao_login)

        self.mensagem = QLabel('', self)
        self.mensagem.setGeometry(70, 200, 100, 20)
        self.mensagem.setStyleSheet("color: red; background-color: #AEA684;")
        layout.addWidget(self.mensagem)

        self.setLayout(layout)

    def check_login(self):
        if self.campo_nome_de_usuario.text() == "login" and self.campo_senha.text() == "senha":
            self.mensagem.setText("Hello World")
        else:
            self.mensagem.setText("Login Falhou")

def main():
    app = QApplication(sys.argv)
    ex = LoginApp()
    ex.show()
    sys.exit(app.exec())

if __name__ == '__main__':
    main()