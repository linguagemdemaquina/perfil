        label_perfil_telefone.setAlignment(Qt.AlignmentFlag.AlignCenter)
        label_perfil_telefone.setFixedHeight(30)
        label_perfil_telefone.setStyleSheet("border-radius:5px; color: #383126; background-color: #9a8f65; font-size: 12px; font-weight: bold;")
        layout.addWidget(label_perfil_telefone)

        # Espaçador
        espacador_5 = QSpacerItem(20, 200, QSizePolicy.Policy.Minimum, QSizePolicy.Policy.Maximum)
        layout.addItem(espacador_5)

        # Definir o layout da janela
        self.setLayout(layout)


#Link Localização
class TelaLocalizacao(QWidget):
    def __init__(self):
        super().__init__()
        self.initUI()
 
    def initUI(self):
        self.setGeometry(100, 100, 320, 600)
        self.setWindowTitle('Localização - Detalhes')

        palette = QPalette()
        palette.setColor(QPalette.ColorRole.Window, QColor('#AEA684'))
        self.setPalette(palette)

        layout = QVBoxLayout()

        # Adicionar widgets ao layout
        label_titulo = QLabel("Detalhes da Localização")
        label_titulo.setAlignment(Qt.AlignmentFlag.AlignCenter)
        layout.addWidget(label_titulo)

        label_conteudo = QLabel("Aqui você pode adicionar os detalhes da localização do usuário.")
        label_conteudo.setAlignment(Qt.AlignmentFlag.AlignCenter)
        layout.addWidget(label_conteudo)

        # Definir o layout da janela
        self.setLayout(layout)



