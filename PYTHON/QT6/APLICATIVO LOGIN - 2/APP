        # Email
        label_perfil_email = QLabel("marcelotosta@linguagemdemaquina.com.br")   
        label_perfil_email.setAlignment(Qt.AlignmentFlag.AlignCenter)
        label_perfil_email.setFixedHeight(30)
        label_perfil_email.setStyleSheet("border-radius:5px; color: #383126; background-color: #9a8f65; font-size: 12px; font-weight: bold;")
        layout.addWidget(label_perfil_email)

        # Telefone
